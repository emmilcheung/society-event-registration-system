<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="6dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notificationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:id="@+id/notificationIconCard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:id="@+id/notificationImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/events_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Notification Header"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/notificationIconCard"
            app:layout_constraintTop_toTopOf="@+id/notificationIconCard"/>
        <TextView
            android:id="@+id/notificationDetails"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="This is the notification detail section. This is the notification detail section. This is the notification detail section."
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintTop_toBottomOf="@id/notificationTitle"
            app:layout_constraintLeft_toRightOf="@id/notificationIconCard"
            app:layout_constraintStart_toStartOf="@id/notificationTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>