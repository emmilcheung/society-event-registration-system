<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="6dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/fragmentEventImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/events_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="College Assembly"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@id/fragmentEventImage"
            app:layout_constraintTop_toTopOf="@id/fragmentEventImage"
            />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Feb 2021 (Fri) 11:30 to 13:00"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/eventTitle"
            app:layout_constraintLeft_toRightOf="@id/fragmentEventImage"
            />

        <TextView
            android:id="@+id/eventPlace"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/eventTime"
            app:layout_constraintLeft_toRightOf="@id/fragmentEventImage"
            />

        <TextView
            android:id="@+id/eventHost"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Host: Shaw College"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/eventPlace"
            app:layout_constraintLeft_toRightOf="@id/fragmentEventImage"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
